<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.cesul.planejadorviagens.TripView">
   <children>
      <BorderPane layoutY="3.0" prefHeight="400.0" prefWidth="600.0">
         <top>
            <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <VBox prefHeight="100.0" prefWidth="139.0" spacing="7.0">
                     <children>
                        <DatePicker fx:id="dataInicioPicker" prefHeight="25.0" prefWidth="148.0" />
                        <DatePicker fx:id="dataFimPicker" prefHeight="25.0" prefWidth="148.0">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </DatePicker>
                     </children>
                  </VBox>
                  <VBox fx:id="destinoField" prefHeight="100.0" prefWidth="460.0" spacing="7.0">
                     <children>
                        <TextField fx:id="destinoField" prefHeight="25.0" prefWidth="431.0" promptText="Digite o Destino" />
                        <TextField fx:id="orcamentoField" prefHeight="25.0" prefWidth="430.0" promptText="Digite o Orçamento" />
                        <Button fx:id="btnAdicionar" mnemonicParsing="false" onAction="#adicionar" prefHeight="25.0" prefWidth="118.0" text="Adicionar Viagem" />
                     </children>
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </VBox>
               </children>
               <BorderPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </BorderPane.margin>
            </HBox>
         </top>
         <bottom>
            <Label fx:id="lblTotal" text="Custo Total R$ 0,00" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets bottom="10.0" top="10.0" />
               </BorderPane.margin>
               <font>
                  <Font name="Arial Black" size="14.0" />
               </font>
            </Label>
         </bottom>
         <center>
            <TableView fx:id="viagensTable" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
              <columns>
                <TableColumn fx:id="colCidade" prefWidth="75.0" style="fx-alignment: CENTER;" text="Destino" />
                <TableColumn fx:id="colIni" prefWidth="75.0" style="fx-alignment: CENTER;" text="Início" />
                  <TableColumn fx:id="colFim" prefWidth="75.0" style="fx-alignment: CENTER;" text="Fim" />
                  <TableColumn fx:id="colCusto" prefWidth="75.0" style="fx-alignment: CENTER;" text="Custo" />
              </columns>
               <BorderPane.margin>
                  <Insets left="10.0" right="10.0" />
               </BorderPane.margin>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
